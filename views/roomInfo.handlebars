<link rel="stylesheet" href="../CSS/styles.css" title="pref" type="text/css"/>

<div class="times">
    <ul>
        {{#each free}}
            {{#if free}}
                <li>
                    <button class="ytime" style="font-size: 20px;"
                            onclick='dibsRoomBookClick(document.getElementById("roomID").value, {{startTime}}, this, "{{../room}}")'>{{time}}</button>
                </li>
            {{else}}
                {{#if_eq owner ../userid}}
                    <li>
                        <button class="mtime" style="font-size: 20px;"
                                onclick='dibsRoomBookClick(document.getElementById("roomID").value, {{startTime}}, this), "{{../room}}"'>{{time}}</button>
                    </li>
                {{else}}
                    <li>
                        <button class="ntime" style="font-size: 20px;"
                                onclick='dibsRoomBookClick(document.getElementById("roomID").value, {{startTime}}, this, "{{../room}}")'>{{time}}</button>
                    </li>
                {{/if_eq}}
            {{/if}}
        {{/each}}
    </ul>
</div>
<div class="desc">
    <img alt="RoomPicture" src={{tempImgURL}}
            height="400"> <br><br>
    <p style="text-align: left;">{{size}} room.<br><br>{{#if tv}}There is{{else}}There is not{{/if}} a TV.<br><br>{{#if
            special}}This is a special room{{/if}}</p>
</div>
<input type=hidden id="roomID" name="roomID" value={{roomid}}/>

<script src="/JS/roomJSFuncs.js"></script>
