<br/>
<div class="row justify-content-center">
    <div class="col-8">
    <div class="form-group text-center">
        <h3>
            <strong>I want a room on:&nbsp</strong>
            <input type='text' id="datepicker" readonly="readonly" />
        </h3>
    </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datepicker').datepicker({
                minDate: 0,
                maxDate: "+1M"
            });
        });
    </script>
    <script>
        $(document).ready(function() {
            $("#datepicker").val("Today");
        });
    </script>
</div>
<br>
<div class="row justify-content-center">
    <div class="col-8">
    <div class="form-group text-center" id="selectionForm">
        <h4>
            <strong>Room Size:&nbsp&nbsp</strong>
            <label class="radio-inline"><input checked='checked' type="radio" name="optradio">Any</label>
            <label class="radio-inline"><input type="radio" value="0" name="optradio">Small</label>
            <label class="radio-inline"><input type="radio" value="1" name="optradio">Medium</label>
            <label class="radio-inline"><input type="radio" value="2" name="optradio">Large</label>
            <span class="multiselect-native-select">
    <div class="btn-group" style="padding-left: 20px;">
        <button class="multiselect dropdown-toggle btn btn-default" type="button" data-toggle="dropdown" title="">
            <span class="multiselect-selected-text">Filters</span>

        </button>
        <ul class="multiselect-container dropdown-menu" id="filterSelect" style="padding-left: 15px;">
            <li data-value="onlyFree">
                <a tabindex="0">
                    <label class="checkbox">
                        <input value="onlyFree"  type="checkbox"> Hide unavailable rooms
                    </label>
                </a>
            </li>
            <li data-value="hasTV">
                <a tabindex="0">
                    <label class="checkbox">
                        <input value="hasTV"  type="checkbox"> Has a TV
                    </label>
              </a>
            </li>
            <li  data-value="hasPhone">
                <a tabindex="0">
                    <label class="checkbox">
                        <input value="hasPhone" type="checkbox"> Has a phone
                    </label>
                </a>
            </li>
            <li>
                <a tabindex="0">
                    <label class="checkbox">
                        <input value="test1" type="checkbox"> Placeholder 1
                    </label>
                </a>
            </li>
            <li>
                <a tabindex="0">
                    <label class="checkbox">
                        <input value="test2" type="checkbox"> Placeholder 2
                    </label>
                </a>
            </li>
            <li>
                <a tabindex="0">
                    <label class="checkbox">
                        <input value="test3" type="checkbox"> Placeholder 3
                    </label>
                </a>
            </li>
        </ul>
    </div>
</span>
        </h4>

    </div>
    </div>
</div>
<br/>
<div class="row justify-content-center">
    <div class="col-8" id="roomButtons">
        {{#each list}}
            {{#if this.isFree}}
                <a class="btn btn-lg yroom" href="/book/{{this.roomID}}" role="button" >{{this.roomNum}}
                    <input type=hidden id="roomSize" name="roomSize" value={{this.size}}/>
                    <input type=hidden id="hasTV" name="hasTV" value={{this.hasTV}}/>
                    <input type=hidden id="hasPhone" name="hasPhone" value={{this.hasPhone}}/>
                </a>
            {{else}}
                <a class="btn btn-lg nroom" href="/book/{{this.roomID}}" role="button">{{this.roomNum}}
                    <input type=hidden id="roomSize" name="roomSize" value={{this.size}}/>
                    <input type=hidden id="hasTV" name="hasTV" value={{this.hasTV}}/>
                    <input type=hidden id="hasPhone" name="hasPhone" value={{this.hasPhone}}/>
                </a>
            {{/if}}
        {{/each}}
    </div>
</div>

<script src="/JS/indexJS.js"></script>
